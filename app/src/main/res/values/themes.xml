<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Splash Screen Api -->
    <style name="Theme.CustomSplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ss_logo_green</item>
        <item name="windowSplashScreenAnimationDuration">1500</item>
        <item name="postSplashScreenTheme">@style/Theme.EasyFood</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.EasyFood" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme</item>
        <item name="colorPrimaryVariant">@color/theme</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme</item>
        <item name="colorSecondaryVariant">@color/theme</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/statusBar</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">#F7F8FA</item>
    </style>

    <!-- Meal Activity theme. -->
    <style name="Theme.MealActivity" parent="Theme.EasyFood">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/mealactivitystatusBar</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/mealactivitynavbarcolor</item>
    </style>

</resources>