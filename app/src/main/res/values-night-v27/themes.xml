<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.EasyFood" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme</item>
        <item name="colorPrimaryVariant">@color/theme</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme</item>
        <item name="colorSecondaryVariant">@color/theme</item>
        <item name="colorOnSecondary">@color/btm_nav_color_unchecked</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/statusBar</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/navBar</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <!-- Meal Activity theme. -->
    <style name="Theme.MealActivity" parent="Theme.EasyFood">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/mealactivitystatusBar</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/mealactivitynavbarcolor</item>
    </style>

    <!-- VideoView Activity theme. -->
    <style name="Theme.VideoView" parent="Theme.EasyFood">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
</resources>